       <menuitem name="Gesti贸n Libros" id="biblioteca.menu_libro" parent="biblioteca.menu_1"  
        action="biblioteca.libro_action_window"/> 
        <menuitem name="Gesti贸n Estanterias" id="biblioteca.menu_estanteria" parent="biblioteca.menu_2"  
        action="biblioteca.estanteria_action_window"/> 
        <menuitem name="Gesti贸n Plantas" id="biblioteca.menu_planta" parent="biblioteca.menu_2"  
        action="biblioteca.planta_action_window"/>               
 
